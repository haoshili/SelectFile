<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/adapter_h"
    android:background="@drawable/listview_click_whilte"
    android:minHeight="@dimen/adapter_h"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/adapter_h"
        android:layout_height="@dimen/adapter_h"
        android:layout_marginLeft="4dip"
        android:padding="14dip"
        android:src="@drawable/mz_ic_list_pdf_small" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="病毒循环 亚当@失密.pdf"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sbtitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="243KB 周日"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re_checked"
            android:layout_width="60dip"
            android:layout_height="@dimen/adapter_h"
            android:layout_alignParentRight="true"
            android:background="@drawable/camera_click"
            android:clickable="true" >

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_circle_gray" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:layout_marginRight="14dip"
            android:background="@color/gray_line" />
    </RelativeLayout>

</LinearLayout>